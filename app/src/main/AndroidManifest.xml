<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.again.fitbox.fitbox_android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.SplahActivity" />
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.CalendarActivity" />
        <activity
            android:name=".activity.ComplaintBaseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme"></activity>
        <activity android:name=".activity.MainListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.EditActivity"
            android:windowSoftInputMode="adjustResize"></activity>
    </application>

</manifest>